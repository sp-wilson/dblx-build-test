{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "jsx": "react",
    "jsxFactory": "h",
    "strict": true,
    "noImplicitAny": false, // This will need to be `true` once we convert some js to ts
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true, // This will need to be `true` at some point
    "lib": ["dom", "webworker"],
    "typeRoots": ["node_modules/@types"]
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules"]
}
